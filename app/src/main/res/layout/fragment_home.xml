<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">


        <ImageView
            android:id="@+id/car_background"
            android:layout_width="272dp"
            android:layout_height="384dp"
            android:alpha="0.8"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/car_background_exterior" />

        <ImageButton
            android:id="@+id/lockButton"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:foregroundTint="#1885F6"
            android:scaleX="1.4"
            android:scaleY="1.4"
            app:layout_constraintBottom_toBottomOf="@+id/car_background"
            app:layout_constraintEnd_toEndOf="@+id/car_background"
            app:layout_constraintHorizontal_bias="0.762"
            app:layout_constraintStart_toStartOf="@+id/car_background"
            app:layout_constraintTop_toTopOf="@+id/car_background"
            app:layout_constraintVertical_bias="0.94"
            app:srcCompat="@android:drawable/ic_lock_idle_lock"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/preconditionButton"
            android:layout_width="38dp"
            android:layout_height="31dp"
            android:background="#000000"
            android:scaleX="1.4"
            android:scaleY="1.4"
            app:layout_constraintBottom_toBottomOf="@+id/car_background"
            app:layout_constraintEnd_toStartOf="@+id/lockButton"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="@+id/car_background"
            app:layout_constraintTop_toTopOf="@+id/car_background"
            app:layout_constraintVertical_bias="0.933"
            app:srcCompat="@drawable/outline_air_24"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/degreesTextView"
            android:layout_width="31dp"
            android:layout_height="18dp"
            android:text="-5Â°C"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/car_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toEndOf="@+id/locationTextView"
            app:layout_constraintTop_toTopOf="@+id/locationTextView"
            app:layout_constraintVertical_bias="0.025" />

        <TextView
            android:id="@+id/carNameTextView"
            android:layout_width="93dp"
            android:layout_height="33dp"
            android:text="My V60"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/car_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.588" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantorp |"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/car_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.142"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carNameTextView"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>